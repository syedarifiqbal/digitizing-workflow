SSH_USER="your_cpanel_username"             # cPanel / SSH username
SSH_HOST="your_server_hostname"             # Your domain or server hostname
SSH_PORT="21098"                            # Namecheap shared hosting SSH port
APP_URL="https://your-domain.com"           # Full URL including https://
PUBLIC_DIR="your-domain.com"               # Web root folder name on server

DB_DATABASE="your_db_name"                  # MySQL DB name from cPanel
DB_HOST="localhost"                         # MySQL DB host from cPanel
DB_USERNAME="your_db_user"                  # MySQL DB user from cPanel
DB_PASSWORD='your_strong_db_password'       # MySQL DB password (single quotes = literal)

MAIL_FROM_ADDRESS="noreply@your-domain.com"
